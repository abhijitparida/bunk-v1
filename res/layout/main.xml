<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_height="fill_parent"
  android:layout_width="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:paddingTop="@dimen/padding_full"
      android:paddingRight="@dimen/padding_full"
      android:paddingBottom="@dimen/padding_zero"
      android:paddingLeft="@dimen/padding_full">
        <TextView
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"
          android:textSize="@dimen/h2"
          android:id="@+id/textview_student_name" />
        <TextView
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"
          android:id="@+id/textview_student_roll_number" />
        <TextView
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"
          android:id="@+id/textview_student_extra_info" />
        <TextView
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"
          android:id="@+id/textview_last_refreshed" />
    </LinearLayout>
    <ProgressBar
      style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:indeterminate="true"
      android:visibility="invisible"
      android:id="@+id/progressbar" />
    <ProgressBar
      style="@android:style/Widget.Holo.Light.ProgressBar.Large"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:indeterminate="true"
      android:visibility="gone"
      android:id="@+id/progressbar_spinner" />
    <TextView
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:paddingLeft="@dimen/padding_full"
      android:paddingRight="@dimen/padding_full"
      android:textColor="@color/red"
      android:id="@+id/textview_info" />
    <ListView
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:divider="@null"
      android:dividerHeight="0dp"
      android:id="@+id/listview_courses">
    </ListView>
</LinearLayout>
